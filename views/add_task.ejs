<%- include('include/_header') %>

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Tasks</a>
            </div>
        </div><br>
        <div class="form-title text-center">
            <h2 class="text-dark">New Task</h2>
            <span class="text-light">Use the form below to create a new Task</span>
        </div><br>

        <form action="/api/tasks" method="POST" id="add_task">
            <div class="new_task">
                <div class="form-group">
                    <label for="task" class="text-light"><b>Task</b></label>
                    <input type="text" name="task" id="task" placeholder="Enter Task">
                </div>
                <div class="form-group">
                    <label for="status" class="text-light"><b>Status</b></label>
                    <div class="radio inline">
                        <input type="radio" id="status-complete" name="status" value="Complete">
                        <label for="status-complete" class="radio-label">Complete</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="status-incomplete" name="status" value="Incomplete">
                        <label for="status-incomplete" class="radio-label">Incomplete</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="due-date" class="text-light"><b>Due Date</b></label>
                    <input type="date" name="date" id="due-date">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark save">Save</button>
                </div><br><br>
            </div>
        </form>
    </div>
</main>

<%- include('include/_footer') %>
