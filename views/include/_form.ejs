<form action="/api/tasks"  method="POST" id="add_task">
    <div class="new_task">
        <div class="form-group">
            <label for="task" class="text-light"><b>Task</b></label>
            <input type="hidden" name="id" value="">
            <input type="text" name="task" value="" placeholder="Enter Task">
        </div>
        <div class="form-group">
            <label for="status" class="text-light"><b>Status</b></label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="status" value="Complete">
                <label for="radio-2" class="radio-label">Complete</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="status" value="Inomplete">
                <label for="radio-3" class="radio-label">Incomplete</label>
            </div>
        </div>
        <div class="form-group">
            <label for="date" class="text-light"><b>Due Date</b></label>
            <input type="hidden" name="id" value="">
            <input type="date" name="date" id="due-date" placeholder="Enter Due Date">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div><br><br>
    </div>
</form>